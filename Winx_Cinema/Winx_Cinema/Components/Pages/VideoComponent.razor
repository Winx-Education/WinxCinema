<!-- VideoComponent.razor -->
@using Winx_Cinema.Shared.Entities

<div class="video-container">
    <iframe width="560" height="315"
            src="@linkTrailer"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
    </iframe>
  
</div>

<style>
    .video-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        height: 0;
        overflow: hidden;
        max-width: 100%;
        background: #000;
    }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
</style>
@code {
    [Parameter]
    public Film Trailer { get; set; } = null!;
    private string linkTrailer = "";

    protected override void OnInitialized()
    {
        base.OnInitialized();
        linkTrailer = Trailer.TrailerPath;
       
    }
    
}
